<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.misena.oscar.rutascbc.vista.GaleriaAministrador"
    android:background="@drawable/example">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:hint="@string/edt_titulacion"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/img_foto_titulacion"
        android:layout_alignEnd="@+id/img_foto_titulacion"></android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="@string/ficha"
        android:id="@+id/textInputLayout3"
     android:layout_marginLeft="40dp">

    </android.support.design.widget.TextInputLayout>
    <Button
        android:onClick="registrarTitulacion"
        android:id="@+id/btn_registrar_titulacion"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@drawable/selector_botones"
        android:text="@string/btn_registrar_titulacion"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/edt_ficha"
        android:layout_alignStart="@+id/edt_ficha"
        android:layout_marginLeft="159dp"
        android:layout_marginStart="159dp"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:id="@+id/img_foto_titulacion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="registrarTitulacion"
        app:srcCompat="@mipmap/foto"
        android:layout_alignTop="@+id/textInputLayout2"
        android:layout_toRightOf="@+id/btn_registrar_titulacion"
        android:layout_toEndOf="@+id/btn_registrar_titulacion" />

    <ImageButton
        android:id="@+id/img_button_titulacion"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:onClick="fotos"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:background="@drawable/selector_botones"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/img_foto_titulacion"
        android:layout_toLeftOf="@+id/img_foto_titulacion"
        android:layout_toStartOf="@+id/img_foto_titulacion" />

    <EditText
        android:id="@+id/edt_ficha"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignBottom="@+id/img_button_titulacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edt_titulacion"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textInputLayout3"
        android:layout_alignLeft="@+id/edt_ficha"
        android:layout_alignStart="@+id/edt_ficha" />


</RelativeLayout>
