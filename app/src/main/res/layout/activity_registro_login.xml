<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.misena.oscar.rutascbc.vista.RegistroLogin">
    <EditText
        android:id="@+id/edt_nombre"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/edt_nombre"/>
    <EditText
        android:id="@+id/edt_correo"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:hint="@string/edt_correo"/>
    <EditText
        android:id="@+id/edt_contrasena"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="@string/edt_contraseña"/>
    <EditText
        android:id="@+id/edt_repetir_contrasena"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="@string/edt_confirmar_contraseña"/>

    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:onClick="registro"
        android:text="@string/btn_registrarse" />
    <Button
        android:id="@+id/btn_iniciar_sesion"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
       android:layout_centerHorizontal="true"
        android:text="@string/btn_iniciar_sesion"/>

</RelativeLayout>
