<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.misena.oscar.rutascbc.vista.GaleriaAministrador">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:hint="@string/edt_titulaacion">

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/edt_titulacion"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="13dp"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_below="@+id/textInputLayout2"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/ficha"
        android:id="@+id/textInputLayout3"
        android:layout_below="@+id/edt_titulacion"
        android:layout_alignLeft="@+id/edt_titulacion"
        android:layout_alignStart="@+id/edt_titulacion">

        <EditText
            android:id="@+id/edt_ficha"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:inputType="number"
            android:textStyle="bold" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btn_registrar_titulacion"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@drawable/selector_botones"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_registrar_titulacion"
        android:textColor="@color/cardview_light_background"/>

    <ImageView
        android:id="@+id/img_foto_titulacion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@mipmap/agregartitulacion" />

    <ImageButton
        android:id="@+id/img_button_titulacion"
        android:layout_width="40dp"
        android:layout_height="150dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />
</RelativeLayout>
