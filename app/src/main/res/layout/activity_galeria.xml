<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.misena.oscar.rutascbc.vista.Galeria">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_meenu"
        android:onClick="irfotos"
        android:orientation="horizontal"
        tools:ignore="HardcodedText">

        <ImageView
            android:id="@+id/img_agregar_titulacion"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/agregartitulacion" />

        <TextView
            android:id="@+id/txv_agregar_titulacion"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:text="@string/txv_agregar_titulacion"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/txv_tarjeta" />
    </RelativeLayout>
</RelativeLayout>
